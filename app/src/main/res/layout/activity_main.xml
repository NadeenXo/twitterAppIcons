<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Local"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_local1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/iv_local2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pngwing_photoroom" />

    <ImageView
        android:id="@+id/iv_local2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_local1"
        app:layout_constraintEnd_toStartOf="@+id/iv_local3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_local1"
        app:layout_constraintTop_toTopOf="@+id/iv_local1"
        app:srcCompat="@drawable/pngwing" />

    <ImageView
        android:id="@+id/iv_local3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_local2"
        app:layout_constraintEnd_toStartOf="@+id/iv_local4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_local2"
        app:layout_constraintTop_toTopOf="@+id/iv_local2"
        app:srcCompat="@drawable/pngwingphotoroom" />

    <ImageView
        android:id="@+id/iv_local4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_local3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_local3"
        app:layout_constraintTop_toTopOf="@+id/iv_local3"
        app:srcCompat="@drawable/screenshot_img" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Remote"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_remote" />

    <ImageView
        android:id="@+id/iv_remote"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        android:src="@drawable/pngwing"
        app:layout_constraintBottom_toTopOf="@+id/iv_remote2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <ImageView
        android:id="@+id/iv_remote2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/iv_remote3"
        app:layout_constraintEnd_toEndOf="@+id/iv_remote"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/iv_remote"
        app:layout_constraintTop_toBottomOf="@+id/iv_remote" />

    <ImageView
        android:id="@+id/iv_remote3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_remote4"
        app:layout_constraintEnd_toEndOf="@+id/iv_remote2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/iv_remote2"
        app:layout_constraintTop_toBottomOf="@+id/iv_remote2" />

    <ImageView
        android:id="@+id/iv_remote4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_selector"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_remote3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/iv_remote3"
        app:layout_constraintTop_toBottomOf="@+id/iv_remote3" />

</androidx.constraintlayout.widget.ConstraintLayout>